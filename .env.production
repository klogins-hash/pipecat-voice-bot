# Production Environment Variables for Railway Deployment
# Copy these to Railway's environment variables section

# Required: Cartesia API Key (for both STT and TTS)
CARTESIA_API_KEY=your_cartesia_api_key_here

# Required: OpenAI API Key (for LLM)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Cohere API Key (if using Cohere bot)
COHERE_API_KEY=your_cohere_api_key_here

# Optional: Daily API Key (if using Daily transport)
DAILY_API_KEY=your_daily_api_key_here

# Production Settings
NODE_ENV=production
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Railway automatically sets PORT, but we use 7860 by default
PORT=7860
